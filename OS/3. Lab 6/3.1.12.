#include <stdio.h>

int main() {
    int process1_increments, process2_increments;
    int counter = 0;

    // Take input for both processes
    printf("Enter how many times Process 1 should increment the counter: ");
    scanf("%d", &process1_increments);
    
    printf("Enter how many times Process 2 should increment the counter: ");
    scanf("%d", &process2_increments);

    int expected_value = process1_increments + process2_increments;

    // Process 1 increments the counter
    for (int i = 0; i < process1_increments; i++) {
        counter++;
    }

    // Process 2 increments the counter
    for (int i = 0; i < process2_increments; i++) {
        counter++;
    }

    // Display final and expected values
    printf("Final counter value (expected: %d): %d\n", expected_value, counter);

    return 0;
}
